page {
	height: 100%;
}

.container {
	position: relative;
	width: 100%;
	height: 100%;
}

.canvas-area {
	width: 100%;
	height: 100%;
	background-color: #f8f8f8;
}

 .myCanvas {
	width: 100%;
	height: 100%;
	background-color: #ddd;
}

.canvas-tools {
	position: fixed;
	left: 0;
	bottom: 20rpx;
	width: 100%;
	height: 100rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
}

.box {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	background-color: rebeccapurple;
}

.box1 {
	background-color: #9cc;
}

.box2 {
	background-color: #09c;
}

.box3 {
	background-color: #c03;
}

.box4 {
	background-color: #f90;
}

.box5 {
	background-color: #ccc;
}